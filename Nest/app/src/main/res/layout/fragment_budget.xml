<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/lexend_medium"
                android:text="Edit your budget"
                android:textColor="@color/darker_blue"
                android:textSize="@dimen/text_size_large">

            </TextView>
            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/layout_rounded_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/lexend_medium"
                    android:text="Monthly Budget"
                    android:textSize="@dimen/text_size_medium_large" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_vertical"
                        android:fontFamily="@font/lexend_medium"
                        android:paddingTop="8dp"
                        android:text="$"
                        android:textSize="@dimen/text_size_large" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:background="@drawable/layout_rounded_bg"
                        android:fontFamily="@font/lexend_medium"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="2700.00"
                        android:textColor="@color/darker_blue"
                        android:textSize="@dimen/text_size_xxx_large" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:layout_gravity="start">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Income"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/blue"/>

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/blue"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$520"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/blue"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Expense"
                            android:fontFamily="@font/lexend_medium"
                            android:textColor="@color/dark_orange"/>

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/dark_orange"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$250"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/dark_orange"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:text="Net Balance"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/lexend_medium"
                            android:textColor="@color/darker_blue"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="top"

                            android:text="$270"
                            android:fontFamily="@font/lexend_medium"
                            android:textSize="@dimen/text_size_x_large"
                            android:textColor="@color/darker_blue"/>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/layout_rounded_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose an estimated budget per category"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/lexend_medium"
                android:gravity="center_horizontal"
                android:paddingVertical="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Food"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Home"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Health"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recreation"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transport"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        app:tint="@color/blue"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Others"
                        android:textSize="@dimen/text_size_large"/>

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded"
                        android:backgroundTint="@color/lightest_blue"
                        android:text="$250"
                        android:fontFamily="@font/lexend_medium"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/darker_blue"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch to percentages"
                android:textColor="@color/blue"
                android:fontFamily="@font/lexend_medium"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/layout_rounded_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expenses by category"
                android:textColor="@color/darker_blue"
                android:textSize="@dimen/text_size_medium_large" />

            <ListView
                android:id="@+id/listViewCategoryExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </ListView>


        </LinearLayout>



</ScrollView>