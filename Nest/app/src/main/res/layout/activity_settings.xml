<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/off_white"
    tools:context=".Settings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/settings_title"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_medium"
        android:gravity="start"
        android:paddingTop="25dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/settings_user_info"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center_horizontal"
        android:paddingTop="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/name"
        android:textStyle="bold"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/edittext_rounded"
        android:inputType="text"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/lexend_regular"
        android:textColor="@color/darker_blue"
        android:hint="Ramiro Arnoldo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/email"
        android:textStyle="bold"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/edittext_rounded"
        android:inputType="text"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/lexend_regular"
        android:textColor="@color/darker_blue"
        android:hint="ramoldo1@gmail.com"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/settings_change_pass"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center_horizontal"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/old_password"
        android:textStyle="bold"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"/>

    <EditText
        android:id="@+id/editTextOldPass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/edittext_rounded"
        android:drawableEnd="@drawable/eye"
        android:inputType="text"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/lexend_regular"
        android:textColor="@color/darker_blue"
        android:hint="************"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/new_password"
        android:textStyle="bold"
        android:textColor="@color/darker_blue"
        android:fontFamily="@font/lexend_bold"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"/>

    <EditText
        android:id="@+id/editTextNewPass"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/edittext_rounded"
        android:drawableEnd="@drawable/eye"
        android:inputType="textPassword"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/lexend_regular"
        android:textColor="@color/darker_blue"
        android:hint="************"/>

    <Button
        android:id="@+id/buttonSaveChanges"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="@string/save_changes"
        android:textAllCaps="true"
        android:fontFamily="@font/lexend_bold"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewAlertIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/alert_circle"
            android:contentDescription="Icon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lexend_light"
            android:visibility="invisible" />
    </LinearLayout>


</LinearLayout>