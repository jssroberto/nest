<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="10dp">


    <TextView
        android:id="@+id/textViewCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_medium"
        android:paddingStart="7dp"
        android:text="Food"
        android:textColor="@color/dateButtonLetters"
        android:textSize="@dimen/text_size_medium_large" />

    <ProgressBar
        android:id="@+id/progressBarCategory"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:paddingHorizontal="9dp"
        android:progress="30"
        android:progressBackgroundTint="@color/light_blue"
        android:progressTint="@color/darker_blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="7dp">

        <TextView
            android:id="@+id/textViewSpentBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$250"
            android:textColor="@color/txt_income"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" spent out of "
            android:textColor="@color/txt_income"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/textViewMaxBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500"
            android:textColor="@color/txt_income"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/radioButtonAlarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="0dp"
            android:buttonTint="@color/dateButtonLetters"
            android:checked="false"
            android:text="Set Alarm At: "
            android:textColor="@color/dateButtonLetters"
            android:textSize="@dimen/text_size_medium" />


        <EditText
            android:id="@+id/editTextAlarmThreshold"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_rounded"
            android:gravity="center"
            android:hint="$600"
            android:inputType="number"
            android:paddingVertical="2dp" />


    </LinearLayout>

</LinearLayout>