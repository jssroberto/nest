<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.budget.PercentageBudgetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/lexend_medium"
            android:paddingBottom="15dp"
            android:text="@string/edit_budget"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/layout_rounded_bg"
            android:backgroundTint="@color/edt_text"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Monthly Budget"
                android:textSize="@dimen/text_size_medium_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/monthly_budget"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_rounded_bg"
                    android:backgroundTint="@color/edt_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="$0.00"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="15"
                    android:textColorHint="@color/txt_color"
                    android:textSize="@dimen/text_size_xx_large" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/income"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$520"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/expense"
                        android:textColor="@color/txt_expenses" />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/txt_expenses"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$250"
                        android:textColor="@color/txt_expenses"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/net_balance"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:gravity="top"

                        android:text="$270"
                        android:textSize="@dimen/text_size_x_large" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/layout_rounded_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_medium"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp"
            android:text="@string/categories_budget"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/food"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmFood"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/editTextAlarmFood"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/et_food"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_rounded_bg"
                android:backgroundTint="@color/edt_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/home"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmHome"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />


                        <EditText
                            android:id="@+id/editTextAlarmHome"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>


                </LinearLayout>

                <EditText
                    android:id="@+id/et_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_rounded_bg"
                android:backgroundTint="@color/edt_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/health"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmHealth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />

                        <EditText
                            android:id="@+id/editTextAlarmHealth"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_health"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_rounded_bg"
                android:backgroundTint="@color/edt_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/recreation"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmRecreation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />


                        <EditText
                            android:id="@+id/editTextAlarmRecreation"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_recreation"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_rounded_bg"
                android:backgroundTint="@color/edt_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/transport"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmTransport"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />


                        <EditText
                            android:id="@+id/editTextAlarmTransport"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_transport"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/layout_rounded_bg"
                android:backgroundTint="@color/edt_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/circle"
                    app:tint="@color/blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="@string/other"
                        android:textSize="@dimen/text_size_medium_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxAlarmOthers"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginEnd="5dp"
                            android:buttonTint="@color/dateButtonLetters"
                            android:checked="false"
                            android:text="@string/alarm"
                            android:textColor="@color/dateButtonLetters"
                            android:textSize="@dimen/text_size_medium" />


                        <EditText
                            android:id="@+id/editTextAlarmOthers"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/edittext_rounded"
                            android:gravity="center"
                            android:hint="$600"
                            android:inputType="number"
                            android:paddingVertical="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_others"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/edittext_rounded"
                    android:backgroundTint="@color/budgetCategory"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text="0%"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            android:background="@drawable/btn_filter" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>