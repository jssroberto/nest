<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Nest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:textColor">@color/darker_blue</item>
        <item name="android:editTextColor">@color/darker_blue</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColorHint">@color/darker_blue_low</item>
        <item name="bottomNavigationStyle">@style/Nest.BottomNavigation</item>

    </style>
    <style name="Nest.BottomNavigation" parent="Widget.Material3.BottomNavigationView">

        <item name="android:background">@color/background</item>
        <item name="itemTextColor">@color/primary_color</item>
        <item name="itemIconTint">@color/primary_color</item>
        <item name="itemActiveIndicatorStyle">@color/background</item>
    </style>

    <style name="Nest.Selectable">
        <item name="backgroundTint">@color/edt_text</item>
        <item name="android:background">@drawable/selectable_backgrund</item>
    </style>
    
    <style name="Nest.DatePicker" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/txt_color</item>
        <item name="android:textColorSecondary">@color/txt_color</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/txt_color</item>
    </style>
</resources>
